<% if @reward.errors.any? %>


  <ul class="alert alert-warning">
    <p><strong>Please fill in ALL fields, you are missing:</strong></p>

    <% @reward.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
  </ul>
<% end %>




<%= form_for @reward, :html => { :class => 'form-horizontal', :multipart => true} do |f| %>
        <div class="control-group">
          <%= f.label :name, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :name, :class => 'text_field' %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :manufacture, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :manufacture, :class => 'text_field' %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :min_order_price_per_unit, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :min_order_price_per_unit, :class => 'text_field' %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :minimum_order, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :minimum_order, :class => 'text_field' %>
          </div>
        </div>

        <div class="control-group">
           <div class="controls">
            <%= f.file_field :reward_image %>
          </div>
        </div>

        <div class="form-actions">
          <%= f.submit nil, :class => 'btn btn-primary' %>
          <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                      rewards_path, :class => 'btn' %>
        </div>
<% end %>
