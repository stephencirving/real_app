<%- model_class = Reward -%>


<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<div class='container'>
  <div class='row'>
    <ul class="thumbnails">
      <% @rewards.each do |reward| %>
        <li class='span12'>
          <div class='thumbnail'>
            <%= image_tag reward.reward_image.url(:small) %>
            <div class="caption">

              <tbody>
                  <tr>

                    <td><%= model_class.human_attribute_name(:name) %>: <%= link_to reward.name, reward_path(reward) %></td><br>
                    <td><%= model_class.human_attribute_name(:manufacture) %>: <%= reward.manufacture %></td><br>
                    <td>Price: $<%= reward.min_order_price_per_unit %></td><br>
                    <td>Minimum Order #: <%= reward.minimum_order %></td><br>
                    <td><%= model_class.human_attribute_name(:id) %>: <%= reward.id %></td><br>
                    <td>Created: <%=l reward.created_at %></td><br>
                    <td>
                      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                                  edit_reward_path(reward), :class => 'btn btn-mini' %>
                      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                                  reward_path(reward),
                                  :method => :delete,
                                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                  :class => 'btn btn-mini btn-danger' %>
                    </td>
                  </tr>
              </tbody>

            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>


<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:manufacture) %></th>
      <th><%= model_class.human_attribute_name(:min_order_price_per_unit) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @rewards.each do |reward| %>
      <tr>
        <td><%= reward.id %></td>
        <td><%= link_to reward.name, reward_path(reward) %></td>
        <td><%= reward.manufacture %></td>
        <td><%= reward.min_order_price_per_unit %></td>
        <td><%= reward.minimum_order %></td>
        <td><%= reward.reward_image %></td>
        <td><%=l reward.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_reward_path(reward), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      reward_path(reward),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_reward_path,
            :class => 'btn btn-primary' %>
