  
  
   <!-- Carousel
    ================================================== -->
    <div id="myCarousel" class="carousel slide">
      <div class="carousel-inner">
        <div class="item active">
          <%= img= image_tag "banner1.jpg" %>


          </div>
        <div class="item">
          <%= img= image_tag "banner2.png" %>

        </div>
        <div class="item">
          <%= img= image_tag "banner3.png" %>

        </div>
      </div>
      <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
    </div><!-- /.carousel -->


<div class='container'>
  <div class='row'>
    <ul class="thumbnails">
      <% @campaigns.each do |campaign| %>
        <li class='span6'>
          <div class='thumbnail'>
            <%= image_tag campaign.reward.reward_image.url(:small) %>
            <div class="caption">
              <h3><%= link_to campaign.name, campaign_path(campaign) %></h3>
              <h4> Ends: <%= campaign.finish_time %></h4>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

